<style>
  :root {
    --primary-color: #8b0000;
    --secondary-color: #a52a2a;
    --text-color: #333;
    --background-light: #f5f5f5;
    --transition: all 0.3s ease;
  }

  html,
  body {
    margin: 0;
    width: 100%;
    font-size: 16px;
    font-family: Verdana, Geneva, Tahoma, sans-serif;
    color: var(--text-color);
    display: flex;
    flex-direction: column;
  }

  main {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
    width: 100%;
    box-sizing: border-box;
  }

  /* Navigation Styles */
  nav {
    padding: 1rem 2rem;
    background-color: var(--primary-color);
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo {
    color: white;
    font-size: 1.5rem;
    font-weight: bold;
  }

  .nav-toggle {
    display: none;
    background: transparent;
    border: none;
    cursor: pointer;
    padding: 0.5rem;
  }

  .hamburger {
    display: block;
    position: relative;
  }

  .hamburger,
  .hamburger::before,
  .hamburger::after {
    width: 2em;
    height: 3px;
    background: white;
    transition: var(--transition);
  }

  .hamburger::before,
  .hamburger::after {
    content: "";
    position: absolute;
    left: 0;
  }

  .hamburger::before {
    top: -8px;
  }
  .hamburger::after {
    bottom: -8px;
  }

  .nav-links {
    list-style: none;
    display: flex;
    gap: 2rem;
    margin: 0;
    padding: 0;
  }

  .nav-links a {
    color: white;
    text-decoration: none;
    transition: var(--transition);
  }

  .nav-links a:hover {
    color: #ff6b6b;
  }

  /* Footer Styles */
  footer {
    background-color: var(--secondary-color);
    color: white;
    padding: 3rem 2rem 1rem;
    margin-top: auto;
  }

  .footer-content {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
    max-width: 1200px;
    margin: 0 auto;
    justify-content: center;
  }

  .footer-section {
    justify-self: center;
  }

  .footer-section h3 {
    margin-top: 0;
    margin-bottom: 1rem;
  }

  .footer-section ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer-section a {
    color: white;
    text-decoration: none;
    transition: var(--transition);
  }

  .footer-section a:hover {
    color: #ff6b6b;
  }

  .footer-bottom {
    text-align: center;
    margin-top: 2rem;
    padding-top: 1rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    body {
      font-size: 10px;
    }
    .nav-toggle {
      display: block;
    }
    main {
      padding: 1rem;
    }
    .logo {
      font-size: 1.2rem;
    }

    .nav-links {
      display: none;
      position: absolute;
      top: 60px;
      left: 0;
      right: 0;
      background-color: var(--primary-color);
      flex-direction: column;
      align-items: center;
      padding: 1rem;
      gap: 1rem;
    }

    .nav-links.show {
      display: flex;
    }

    .footer-content {
      grid-template-columns: 1fr;
      gap: 2rem;
      text-align: center;
    }

    .footer-section {
      justify-self: center;
      text-align: center;
    }

    .footer-section ul {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 0.5rem;
    }
  }
</style>

<script>
  const navToggle = document.querySelector(".nav-toggle");
  const navLinks = document.querySelector(".nav-links");

  navToggle?.addEventListener("click", () => {
    navLinks?.classList.toggle("show");
  });
</script>
